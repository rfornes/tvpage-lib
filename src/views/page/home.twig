{% extends 'base.twig' %}
{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css">
	<link rel="stylesheet" href="{{assetsUrl}}/demo/theme.css">
{% endblock %}
{% block main %}
	
	{{ cartridge( 'config') }}
	
	{{ cartridge( 'player') }}

	{{ cartridge( 'breadcrumb', { separator: '//' }) }}

	{{
		cartridge( 'channel-slider', {
			entity: 'channel',
			header: 'Channels Slider',
			item: ['thumbnail','title']
		})
	}}

	{#{{
		cartridge( 'channel-grid', {
			entity: 'channel',
			header: 'Channels Grid',
			item: ['thumbnail','title']
		})
	}}#}

	{{
		cartridge( 'video-grid', {
			entity: 'video',
			header: 'Video Grid',
			item: ['thumbnail','title']
		})
	}}

	{{
		cartridge( 'video-slider', {
			entity: 'video',
			header: 'Videos Slider',
			item: ['thumbnail','title'],
			itemClass: 'play',
			renderData: true
		})
	}}
	
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js"></script>
	<script src="{{assetsUrl}}/demo/home.js"></script>
{% endblock %}