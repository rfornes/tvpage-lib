{% extends 'base.twig' %}

{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css">
	<link rel="stylesheet" href="{{assetsUrl}}/demo/theme.css">
{% endblock %}

{% block main %}

	{{ cartridge( 'config') }}

	{# Breadcrumbs #}
	{{ 
		cartridge( 'breadcrumbs', {
			separator: '//'
		})
	}}

	{# Channel Slider #}
	{{
		cartridge( 'channel-slider', {
			entity: 'channel',
			component: 'slider',
			header: 'Watch Channels',
			itemTemplate: ['thumbnail', 'title']
		})
	}}

	{# Player #}
	{{
		cartridge( 'player', {
			component: 'player'
		})
	}}

	{# Video Slider #}
	{{
		cartridge( 'video-slider', {
			entity: 'video',
			component: 'slider',
			header: 'Watch Videos',
			itemTemplate: ['thumbnail','title'],
			actions: 'play',
			playback: true
		})
	}}

	{# Video Gallery #}
	{{
		cartridge( 'videos-gallery', {
			entity: 'video',
			component: 'gallery',
			playback: true,
			searchBar: true,
			pagination: true,
			itemTemplate: ['thumbnail','title']
		})
	}}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="//cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js"></script>
	<script src="{{assetsUrl}}/demo/home.js"></script>
{% endblock %}