{% extends 'base.twig' %}

{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="{{assetsUrl}}/demo/theme.css">
{% endblock %}

{% block main %}

	{{

		widget( 'related-products', {
			
			entity: 'product',

			component: 'slider'

		})

	}}

	{{

		widget( 'player', {
			
			component: 'player'

		})

	}}
	
	{{

		widget( 'videos-gallery', {

			entity: 'video',
			
			component: 'gallery',

			playback: 'player',

			searchBar: true,

			pagination: true,

			itemTemplate: ['thumbnail','title']

		})

	}}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{assetsUrl}}/demo/home.js"></script>
{% endblock %}