<section id="videos-gallery-cartridge"><div class="search-bar container"><div class="container">
	<div class="row">
		<div class="column column-50">
			<label for="search">Search by text</label>
			<input type="text" placeholder="Search some" id="search">
		</div>
		{% for item in DATA.filters|split(',') %}
			<div class="column">
				<label for="{{item}}">Choose by {{item|replace({'video-':''})|replace({'-':' '})}}</label>
				<select id="{{item}}" name="select">
					{% for itemChildren in ['Option A', 'Option B','Option C','Option D'] %}
						<option value="1">{{itemChildren}}</option>
					{% endfor %}
				</select>
			</div>	
		{% endfor %}
	</div>
</div></div/><div class="grid container">{% if channel.videos|length %}
	<div class="container">
		{% for row in channel.videos|batch( DATA.perRow is defined ? DATA.perRow : 4, "None") %}
			<div class="row">
				{% for item in row %}
					{% if item.id %}
						<div class="column video-play" data-video-id={{item.id}}>
							


	
	


{% if ( '' != item.asset.thumbnailUrl and '' != tvsite_canonical_url(channel, channel.playlist, item) ) %}
	<a href="tvsite_canonical_url(channel, channel.playlist, item)" class="thumbnail">
		<img src="{{ item.asset.thumbnailUrl }}" alt="{{item.title}}">
	</a>
{% endif %}<p>{{item.title|slice(0, DATA.titleLength is defined ? DATA.titleLength : 40)}}</p>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		{% else %}
			no videos
		{% endfor %}
	</div>
{% endif %}</div/><div class="pagination container"><ul class="pages-list">
  <li>
    <a href="#" class="pagination-arrow">
      <span>&laquo;</span>
    </a>
  </li>
  {% for item in 0..5 %}
    <li><a href="#">{{item}}</a></li>
  {% endfor %}
  <li>
    <a href="#" class="pagination-arrow">
      <span>&raquo;</span>
    </a>
  </li>
</ul></div/><div class="bootstrap container">


	
	
		  
	
{% if ( channel and channel.videos ) %}


<script>
  TVSite = window.TVSite || {};
  
  	
      
        TVSite[ 'playList' ] = {{channel.videos|json_encode()}};
      
  	
  
</script>


{% endif %}
</div/></section>