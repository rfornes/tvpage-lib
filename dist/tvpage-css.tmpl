.player,
.player-content {
  background-color: black;
  position: relative;
}
.player:after,
.player-content:after {
  content: "";
  display: table;
  clear: both;
}
.player:before,
.player-content:before {
  display: block;
  content: "";
  width: 100%;
  padding-top: 56.25%;
}
.player > div,
.player-content > div {
  position: absolute !important;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.search-box {
  display: block;
  margin: 0;
  padding: 0 0 0 10px;
  height: 32px;
  line-height: 32px;
  padding-left: 10px;
  border: 1px solid gray;
  font-weight: lighter;
  box-sizing: border-box;
}
.search-box:focus {
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(169, 169, 169, 0.6);
  border-color: darkgray;
  outline: 0;
}
